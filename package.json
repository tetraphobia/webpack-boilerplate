{
    "name": "webpack-boilerplate",
    "version": "0.0.1",
    "description": "A boilerplate to quickly get started developing with Webpack.",
    "repository": "https://github.com/tetraphobia/webpack-boilerplate",
    "author": "Jacob A. Teddy",
    "license": "MIT",
    "private": false,
    "scripts": {
        "start": "NODE_ENV=development webpack serve --config ./config/webpack.dev.ts",
        "build": "NODE_ENV=production webpack --progress --config ./config/webpack.production.ts && cd ./build/compiled && tar -czvf ../build.tar.gz ."
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.1",
        "@types/html-webpack-plugin": "^3.2.6",
        "@types/node": "18.0.0",
        "@typescript-eslint/eslint-plugin": "5.28.0",
        "@typescript-eslint/parser": "5.28.0",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "6.7.1",
        "css-minimizer-webpack-plugin": "4.0.0",
        "eslint": "^8.18.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-jsdoc": "^39.3.3",
        "eslint-plugin-n": "^15.2.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-webpack-plugin": "^3.1.1",
        "html-webpack-plugin": "5.5.0",
        "mini-css-extract-plugin": "2.6.1",
        "sass": "1.52.3",
        "sass-loader": "13.0.0",
        "style-loader": "^3.3.1",
        "stylelint": "^14.9.1",
        "stylelint-config-standard": "^26.0.0",
        "stylelint-webpack-plugin": "^3.3.0",
        "ts-loader": "^9.3.0",
        "ts-node": "10.8.1",
        "typescript": "4.7.4",
        "webpack": "5.73.0",
        "webpack-cli": "4.10.0",
        "webpack-dev-server": "4.9.2",
        "webpack-merge": "^5.8.0"
    }
}
