{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:jsdoc/recommended",
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
	"jsdoc"
    ],
    "ignorePatterns": [
        "./build/**/*",
        "./public/**/*",
        "./src/vendor/**/*.js",
        "./node_modules/**/*"
    ],
    "rules": {
    }
}
